---
import type { Lang } from '@/utils/i18n';
import { t } from '@/utils/translations';
import { NAV_ITEMS } from '@/utils/navItems';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  lang?: Lang;
  class?: string;
}
const { lang, class: className } = Astro.props as Props;
const resolvedLang = ((Astro.currentLocale as Lang | undefined) ??
  (lang as Lang | undefined) ??
  'zh') as Lang;
---

<nav class={`hidden lg:flex items-center gap-6 ${className ?? ''}`.trim()}>
  {
    NAV_ITEMS.map((item) => (
      <div class="group relative">
        <a
          href={getRelativeLocaleUrl(resolvedLang, `/category/${item.key}`)}
          class="nav-link inline-flex items-center gap-1 py-2 text-sm font-semibold no-underline hover:no-underline focus:no-underline"
        >
          <span>{t(resolvedLang, `navigation.${item.key}`)}</span>
        </a>
        <div class="nav-dropdown pointer-events-none absolute top-full left-1/2 z-50 hidden min-w-36 -translate-x-1/2 rounded-lg py-1.5 shadow-xl group-hover:pointer-events-auto group-hover:block">
          {item.tags.map((tag) => (
            <a
              href={getRelativeLocaleUrl(resolvedLang, `/tags/${tag}`)}
              class="block rounded-sm px-3 py-1.5 text-sm text-neutral-700 transition-colors hover:bg-black/20 hover:text-black dark:text-neutral-300 dark:hover:bg-white/15 dark:hover:text-white"
            >
              {t(resolvedLang, `tags.${tag}`)}
            </a>
          ))}
        </div>
      </div>
    ))
  }
</nav>
