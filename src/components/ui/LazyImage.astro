---
interface Props {
  src: string;
  alt: string;
  placeholder?: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'sync' | 'auto';
  fetchpriority?: 'high' | 'low' | 'auto';
  width?: number;
  height?: number;
  aspectRatio?: string;
}

const {
  src,
  alt,
  placeholder,
  class: className = '',
  loading = 'lazy',
  decoding = 'async',
  fetchpriority = loading === 'lazy' ? 'low' : 'auto',
  width,
  height,
  aspectRatio,
} = Astro.props as Props;

const hasPlaceholder = !!placeholder;
const containerId = `lazy-img-${Math.random().toString(36).substring(2, 9)}`;
---

<div
  class={`lazy-image-container ${className}`.trim()}
  style={aspectRatio ? `aspect-ratio: ${aspectRatio};` : undefined}
>
  {
    hasPlaceholder && (
      <img
        src={placeholder}
        alt=""
        class="lazy-image-placeholder"
        aria-hidden="true"
        width={width}
        height={height}
      />
    )
  }

  <img
    id={containerId}
    src={src}
    alt={alt}
    class="lazy-image"
    loading={loading}
    decoding={decoding}
    fetchpriority={fetchpriority}
    width={width}
    height={height}
  />
</div>

<style>
  .lazy-image-container {
    position: relative;
    overflow: hidden;
    display: block;
  }

  .lazy-image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(20px);
    transform: scale(1.1);
    z-index: 1;
  }

  .lazy-image {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 400ms ease-out;
    z-index: 2;
  }

  .lazy-image.loaded {
    opacity: 1;
  }

  @media (prefers-reduced-motion: reduce) {
    .lazy-image {
      transition: opacity 50ms ease-out;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lazyImages = document.querySelectorAll<HTMLImageElement>('.lazy-image');

    lazyImages.forEach((img) => {
      const loadImage = () => {
        img.classList.add('loaded');
      };

      if (img.complete) {
        loadImage();
      } else {
        img.addEventListener('load', loadImage);
      }
    });
  });
</script>
