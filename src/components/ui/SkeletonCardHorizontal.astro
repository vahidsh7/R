---
import Skeleton from './Skeleton.astro';

interface Props {
  class?: string | undefined;
}

const { class: className = '' } = Astro.props as Props;
---

<div class={`block overflow-hidden rounded-xl ${className}`.trim()} aria-label="加载中...">
  <div class="relative aspect-[16/9] w-full overflow-hidden sm:hidden">
    <Skeleton variant="image" class="absolute inset-0 h-full w-full" rounded={false} />

    <div class="absolute inset-0 bg-gradient-to-b from-black/5 via-black/20 to-black/40"></div>

    <div class="absolute inset-x-0 bottom-0 p-4">
      <div class="flex items-center justify-between">
        <Skeleton variant="line" width="80px" height="12px" />
        <Skeleton variant="line" width="60px" height="12px" />
      </div>
      <div class="mt-4 space-y-2">
        <Skeleton variant="title" width="100%" height="18px" />
        <Skeleton variant="title" width="80%" height="18px" />
      </div>
    </div>
  </div>

  <div class="hidden grid-cols-3 gap-0 sm:grid">
    <div class="relative col-span-2 aspect-[16/9] overflow-hidden">
      <Skeleton variant="image" class="absolute inset-0 h-full w-full" rounded={false} />
    </div>

    <div class="col-span-1 flex h-full flex-col p-4">
      <div class="flex items-center justify-between">
        <Skeleton variant="line" width="70px" height="12px" />
        <Skeleton variant="line" width="50px" height="12px" />
      </div>

      <div class="mt-4 space-y-2">
        <Skeleton variant="title" width="100%" height="18px" />
        <Skeleton variant="title" width="85%" height="18px" />
      </div>

      <div class="mt-4 space-y-2">
        <Skeleton variant="text" width="100%" height="14px" />
        <Skeleton variant="text" width="100%" height="14px" />
        <Skeleton variant="text" width="60%" height="14px" />
      </div>
    </div>
  </div>
</div>
